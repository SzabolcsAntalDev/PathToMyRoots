@using PathToMyRootsWebApp.Utils
@model PathToMyRootsWebApp.Models.PersonModel

<h1>Person Details</h1>

<div>
    <h3>Noble Title: @Model.NobleTitle</h3>
    <h3>First Name: @Model.FirstName</h3>
    <h3>Last Name: @Model.LastName</h3>
    <h3>Maiden Name: @Model.MaidenName</h3>
    <h3>Other Names: @Model.OtherNames</h3>
    <h3>Gender: @PersonModelFormatter.ToGender(Model)</h3>
    <h3>Birth Date: @DateHelper.ServerDateToHumanReadableDateFormat(Model.BirthDate)</h3>
    <h3>Death Date: @DateHelper.ServerDateToHumanReadableDateFormat(Model.DeathDate)</h3>
    <h3>Mother: @PersonModelFormatter.ToShortFullName(Model.BiologicalMother)</h3>
    <h3>Father: @PersonModelFormatter.ToShortFullName(Model.BiologicalFather)</h3>
    <h3>Spouse: @PersonModelFormatter.ToShortFullName(Model.FirstSpouse)</h3>
</div>