@using PathToMyRootsWebApp.Constants
@using PathToMyRootsWebApp.Utils
@model PathToMyRootsWebApp.Models.PersonModel

@{
    ViewData["Title"] = Model?.Id > PathToMyRootsWebAppConstants.UnsetIntValue ? "Edit Person" : "Add Person";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
else if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-action="@((Model?.Id > PathToMyRootsWebAppConstants.UnsetIntValue) ? "EditPerson" : "AddPerson")" method="post">
    @if (Model?.Id > 0)
    {
        <input type="hidden" name="Id" value="@Model.Id" />
    }

    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input type="text" id="FirstName" name="FirstName" class="form-control" value="@Model?.FirstName" />
    </div>

    <div class="form-group">
        <label for="LastName">Last Name</label>
        <input type="text" id="LastName" name="LastName" class="form-control" value="@Model?.LastName" />
    </div>

    <div class="form-group">
        <label for="MaidenName">Maiden Name</label>
        <input type="text" id="MaidenName" name="MaidenName" class="form-control" value="@Model?.MaidenName" />
    </div>

    <div class="form-group">
        <label for="OtherNames">Other Names</label>
        <input type="text" id="OtherNames" name="OtherNames" class="form-control" value="@Model?.OtherNames" />
    </div>

    <div class="form-group">
        <label for="IsMale">Gender</label>
        <select id="IsMale" name="IsMale" class="form-control">
            <option value="true" selected="@(Model?.IsMale == true)">Male</option>
            <option value="false" selected="@(Model?.IsMale == false)">Female</option>
        </select>
    </div>

    <div class="form-group">
        <label for="BirthDate">Birth Date</label>
        <fieldset>
            <label>
                <input type="radio" name="BirthStatus" value="unknown" id="unknownBirthDate"
                @if (Model?.BirthDate == null || Model?.BirthDate == PathToMyRootsWebAppConstants.UnknownDate)
                {
                    @:checked
                }
                       onclick="toggleBirthDateInput()" /> Unknown
            </label>

            <label>
                <input type="radio" name="BirthStatus" value="concreteDate" id="concreteBirthDate"
                @if (Model?.BirthDate != null && Model.BirthDate != PathToMyRootsWebAppConstants.UnknownDate)
                {
                    @:checked
                }
                       onclick="toggleBirthDateInput()" /> Date
            </label>

            <div id="birthDateDiv" style="display:none;">
                <input type="date" id="birthDateInput" name="birthDateInput"
                @if (Model?.BirthDate != null && Model.BirthDate != PathToMyRootsWebAppConstants.UnknownDate)
                {
                    @:value="@Model.BirthDate?.ToString("yyyy-MM-dd")"
                } />
            </div>

            <input type="hidden" id="hiddenBirthDate" name="BirthDate" value="@Model?.BirthDate?.ToString("yyyy-MM-dd")" />
        </fieldset>
    </div>

    <div class="form-group">
        <label for="DeathDate">Death Date</label>
        <fieldset>
            <label>
                <input type="radio" name="DeathStatus" value="alive" id="alive"
                @if (Model?.DeathDate == null)
                {
                    @:checked
                }
                       onclick="toggleDeathDateInput()" /> Alive
            </label>
            <label>
                <input type="radio" name="DeathStatus" value="unknown" id="unknownDeathDate"
                @if (Model?.DeathDate == PathToMyRootsWebAppConstants.UnknownDate)
                {
                    @:checked
                }
                       onclick="toggleDeathDateInput()" /> Unknown
            </label>
            <label>
                <input type="radio" name="DeathStatus" value="concreteDate" id="concreteDeathDate"
                @if (Model?.DeathDate != null && Model.DeathDate != PathToMyRootsWebAppConstants.UnknownDate)
                {
                    @:checked
                }
                       onclick="toggleDeathDateInput()" /> Date
            </label>

            <div id="deathDateDiv" style="display:none;">
                <input type="date" id="deathDateInput" name="deathDateInput"
                @if (Model?.DeathDate != null && Model.DeathDate != PathToMyRootsWebAppConstants.UnknownDate)
                {
                    @:value="@Model.DeathDate?.ToString("yyyy-MM-dd")"
                } />
            </div>

            <input type="hidden" id="hiddenDeathDate" name="DeathDate" value="@Model?.DeathDate?.ToString("yyyy-MM-dd")" />
        </fieldset>
    </div>


    <div class="form-group">
        <label for="BiologicalMotherId">Mother</label>
        <select id="BiologicalMotherId" name="BiologicalMotherId" class="form-control">
            <option value="">-- Select Mother --</option>
            @foreach (var mother in (List<PersonModel>)ViewBag.Mothers)
            {
                <option value="@mother.Id" selected=@(Model?.BiologicalMotherId == mother.Id)>
                    @PersonModelFormatter.ToShortFullName(mother)
                </option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="BiologicalFatherId">Father</label>
        <select id="BiologicalFatherId" name="BiologicalFatherId" class="form-control">
            <option value="">-- Select Father --</option>
            @foreach (var father in (List<PersonModel>)ViewBag.Fathers)
            {
                <option value="@father.Id" selected=@(Model?.BiologicalFatherId == father.Id)>
                    @PersonModelFormatter.ToShortFullName(father)
                </option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="SpouseId">Spouse</label>
        <select id="SpouseId" name="SpouseId" class="form-control">
            <option value="">-- Select Spouse --</option>
            @foreach (var spouse in (List<PersonModel>)ViewBag.Spouses)
            {
                <option value="@spouse.Id" selected=@(Model?.SpouseId == spouse.Id)>
                    @PersonModelFormatter.ToShortFullName(spouse)
                </option>
            }
        </select>
    </div>

    <form asp-action="EditPerson" method="post">
        @if (Model?.Id == PathToMyRootsWebAppConstants.UnsetIntValue)
        {
            <button type="submit" class="btn btn-primary">Add</button>
        }
        else
        {
            <button type="submit" class="btn btn-primary">Update</button>
        }
    </form>
</form>

@section Scripts {
    <script>
        const UnknownDate = '@PathToMyRootsWebAppConstants.UnknownDate';
    </script>

    <script src="~/js/add-edit-person.js"></script>
}