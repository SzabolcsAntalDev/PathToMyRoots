@using PathToMyRootsWebApp.Constants
@using PathToMyRootsWebApp.Utils
@model List<PathToMyRootsWebApp.Models.PersonModel>

<div class="div-persons">
    @{
        ViewData["Title"] = "Persons";
    }

    <h1>@ViewData["Title"]</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div id="persons-content">
        @await Html.PartialAsync("_PersonsTablePartial", Model)
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/persons.css" />
}
@section Scripts {
    <script src="~/js/persons.js"></script>
}